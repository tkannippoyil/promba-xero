<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @customer.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @customer.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  <dd><%= @customer.date_of_birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:home_address) %>:</strong></dt>
  <dd><%= @customer.home_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @customer.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile_number) %>:</strong></dt>
  <dd><%= @customer.mobile_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employment_basis) %>:</strong></dt>
  <dd><%= @customer.employment_basis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:classification) %>:</strong></dt>
  <dd><%= @customer.classification %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @customer.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pay_adjustment) %>:</strong></dt>
  <dd><%= @customer.pay_adjustment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:xeroemployeeid) %>:</strong></dt>
  <dd><%= @customer.xeroemployeeid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preferred_name) %>:</strong></dt>
  <dd><%= @customer.preferred_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_supervisor) %>:</strong></dt>
  <dd><%= @customer.is_supervisor %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
